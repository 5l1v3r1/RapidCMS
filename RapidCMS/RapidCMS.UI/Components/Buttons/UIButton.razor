@using RapidCMS.Common.Models.UI
@using RapidCMS.UI.Models

@if (!string.IsNullOrEmpty(Button.CustomAlias))
{
    @CustomButtons.GetCustomButton(Button.CustomAlias, Model)
}
else
{
    <DefaultButton Model="Model" />
}

@functions {
    [CascadingParameter(Name = "CustomButtons")] protected CustomButtonContainer CustomButtons { get; set; }

    [Parameter] private ButtonUI Button { get; set; }

    [Parameter] private ButtonViewModel Model { get; set; }
}
