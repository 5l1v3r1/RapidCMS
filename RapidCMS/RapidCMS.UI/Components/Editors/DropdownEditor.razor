@inherits BaseDataEditor

@using RapidCMS.Common.Data
@using RapidCMS.UI.Helpers

@if (Options != null)
{
    <select class="form-control @(CssHelper.GetValidationClass(State))" @onchange=@OnChange value="@SelectedIndex">
        @if (IsNullable)
        {
            <option value="-1"></option>
        }
        @foreach (var (option, index) in Options.Select((o, i) => (o, i)))
        {
            <option value=@index>@option.Labels.First()</option>
        }
    </select>

    @foreach (var message in GetValidationMessages())
    {
        <div class="invalid-feedback">
            @message
        </div>
    }
}
@functions {

    private IEnumerable<IElement>? Options;
    private int SelectedIndex = -1;

    private bool IsNullable;

    protected override async Task OnParametersSetAsync()
    {
        if (DataCollection != null)
        {
            IsNullable = Nullable.GetUnderlyingType(Property.PropertyType) != null;

            var value = GetValue(false);

            await DataCollection.SetEntityAsync(Entity);
            var data = await DataCollection.GetAvailableElementsAsync();

            var list = data?.ToList();

            SelectedIndex = list?.FindIndex(option => option.Id.Equals(value)) ?? -1;

            if (SelectedIndex == -1)
            {
                // make dropdown nullable for current non-selection
                IsNullable = true;
            }

            Options = list;
        }
    }

    private void OnChange(UIChangeEventArgs args)
    {
        var index = int.Parse((string)args.Value);

        if (index == -1)
        {
            SetValue(null, false);
        }
        else
        {
            SetValue(Options.ElementAt(index).Id, false);
        }
        
        // reset nullable when option is selected
        if (Nullable.GetUnderlyingType(Property.PropertyType) == null && IsNullable)
        {
            IsNullable = false;

            StateHasChanged();
        }
    }
}