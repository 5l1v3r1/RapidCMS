@inherits BaseEditor<ICollection<string>>

@using RapidCMS.Common.Interfaces

@if (Options != null)
{
    var index = 0;
    var group = Guid.NewGuid().ToString();

    <div class="form-control form-control-select-list">
        
        @foreach (var option in Options)
        {
            <div class="form-check">
                <input class="form-check-input" 
                       type="checkbox" 
                       value="@option.Id" 
                       id="@group-option@(++index)" 
                       name=@group 
                       checked=@(Value?.Contains(option.Id)) 
                       onchange=@((UIChangeEventArgs __e) => OnChange(__e, option.Id)) />
                <label class="form-check-label" for="@group-option@(index)">
                    @option.Label
                </label>
            </div>
        }
    </div>
}
@functions {
#nullable enable

    private IEnumerable<IOption>? Options;

    protected override async Task OnInitAsync()
    {
        if (DataProvider != null)
        {
            Options = await DataProvider.GetAllOptionsAsync();
        }
    }

    private void OnChange(UIChangeEventArgs e, string value)
    {
        if (Value == null)
        {
            Value = new List<string>();
        }

        if ((bool)e.Value == true)
        {
            Value.Add(value);
        }
        else
        {
            Value.Remove(value);
        }
    }
}