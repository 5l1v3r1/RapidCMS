@inherits BaseDataEditor

@using RapidCMS.Common.Data

@if (Options != null)
{
    var index = 0;
    var group = Guid.NewGuid().ToString();

    var value = Property.Getter(Entity);

    <div class="form-control form-control-select-list">
        
        @foreach (var option in Options)
        {
            <div class="form-check">
                <input class="form-check-input" 
                       type="radio" 
                       value=@option.Id
                       id=@group-option@(++index)
                       name=@group 
                       checked=@(option.Id.Equals(value)) 
                       onchange=@(async args => Property.Setter(Entity, option.Id)) />
                <label class="form-check-label" for="@group-option@(index)">
                    @option.Label
                </label>
            </div>
        }
    </div>
}
@functions {
#nullable enable

    private IEnumerable<IElement>? Options;

    protected override async Task OnInitAsync()
    {
        if (DataCollection != null)
        {
            Options = await DataCollection.GetAvailableElementsAsync();
        }
    }
}