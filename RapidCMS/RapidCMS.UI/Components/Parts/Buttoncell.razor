<td class="button-cell">
    @if (Buttons != null && Buttons.Any())
    {
        @foreach (var button in Buttons)
        {
            var model = button.ToViewModel();

            model.OnClick += OnButtonClick;

            <UIButton Button="button" Model="model" />
        }
    }
</td>

@code {
    [Parameter] public IEnumerable<ButtonUI>? Buttons { get; set; }
    [Parameter] public EventHandler<ButtonClickEventArgs> OnButtonClick { get; set; }
}
