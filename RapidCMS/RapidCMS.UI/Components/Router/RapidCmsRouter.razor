<CascadingValue Value="@ButtonRenderFragmentContainer" Name="Buttons">
    <CascadingValue Value="@EditorRenderFragmentContainer" Name="Editors">
        <CascadingValue Value="@CustomSectionRenderFragmentContainer" Name="CustomSections">
            <CascadingValue Value="@CustomLogin" Name="CustomLogin">
                <Router AppAssembly="typeof(RapidCmsRouter).Assembly" />
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>


@code {

    private ButtonRenderFragmentContainer ButtonRenderFragmentContainer { get; set; } = new ButtonRenderFragmentContainer(null);
    private EditorRenderFragmentContainer EditorRenderFragmentContainer { get; set; } = new EditorRenderFragmentContainer(null);
    private CustomSectionRenderFragmentContainer CustomSectionRenderFragmentContainer { get; set; } = new CustomSectionRenderFragmentContainer(null);

    private RenderFragment? CustomLogin { get; set; }

    [Inject]
    private ICustomRegistrationProvider Registrations { get; set; }

    protected override Task OnParametersSetAsync()
    {
        ButtonRenderFragmentContainer = new ButtonRenderFragmentContainer(Registrations.CustomButtonRegistrations);
        EditorRenderFragmentContainer = new EditorRenderFragmentContainer(Registrations.CustomEditorRegistrations);
        CustomSectionRenderFragmentContainer = new CustomSectionRenderFragmentContainer(Registrations.CustomSectionRegistrations);

        CustomLogin = Registrations.CustomLoginRegistration.ToRenderFragment();

        return base.OnParametersSetAsync();
    }
}