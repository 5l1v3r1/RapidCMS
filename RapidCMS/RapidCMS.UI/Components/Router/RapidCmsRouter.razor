@using RapidCMS.UI.Models
@using RapidCMS.Common.Models

<CascadingValue Value="@CustomButtonContainer" Name="CustomButtons">
    <CascadingValue Value="@CustomEditorContainer" Name="CustomEditors">
        <Router AppAssembly="typeof(RapidCMS.UI.Startup).Assembly" />
    </CascadingValue>
</CascadingValue>


@functions {
#nullable enable

    private CustomButtonContainer CustomButtonContainer { get; set; } = new CustomButtonContainer(null);
    private CustomEditorContainer CustomEditorContainer { get; set; } = new CustomEditorContainer(null);

    [Inject]
    private Root Root { get; set; }

    protected override Task OnParametersSetAsync()
    {
        CustomButtonContainer = new CustomButtonContainer(Root.CustomButtonRegistrations);
        CustomEditorContainer = new CustomEditorContainer(Root.CustomEditorRegistrations);

        return base.OnParametersSetAsync();
    }
}
