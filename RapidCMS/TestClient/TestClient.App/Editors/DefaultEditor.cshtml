@using RapidCMS.Common.Enums

@if (Type.HasValue)
{
    switch (Type)
    {
        case EditorType.Numeric:

            <NumericEditor Alias="Alias" Value="Value" />

            break;

        case EditorType.TextArea:

            <TextAreaEditor Alias="Alias" Value="Value" />

            break;

        case EditorType.TextBox:
        default:

            <TextBoxEditor Alias="Alias" Value="Value" />

            break;
    }
}

@functions {
    [Parameter]
    private object Value { get; set; }

    [Parameter]
    private EditorType? Type { get; set; } = null;

    [Parameter]
    private string Alias { get; set; }
}