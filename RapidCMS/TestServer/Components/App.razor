@*
    The Router component displays whichever component has a @page
    directive matching the current URI.
*@

@using RapidCMS.UI.Models
@using TestServer.Components.CustomButtons

@{ 
    var customButtons = new List<CustomButtonRegistration>
    {
        new CustomButtonRegistration
        {
            ButtonAlias = "create-button",
            ButtonType = typeof(CreateButton<>)
        }
    };
}

<RapidCmsRouter CustomButtons="@customButtons" />